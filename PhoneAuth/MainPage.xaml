<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneAuth.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <VerticalStackLayout x:Name="pnlMobileInfo">
                <Entry x:Name="txtMobileNo"></Entry>
                <Button
        x:Name="btnSubmit"
        Text="Submit"
        Clicked="btnSubmit_Clicked"
        HorizontalOptions="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout IsVisible="False" x:Name="pnlMobileVerification">
                <Entry x:Name="txtCode"/>
                <Button
        x:Name="btnVerifyCode"
        Text="Verify"
        Clicked="btnVerifyCode_Clicked"
        HorizontalOptions="Center" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
